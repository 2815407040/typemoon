<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.typemoonbackend.mapper.UserMapper">

    <select id="findByUsername" parameterType="String" resultType="com.example.typemoonbackend.entity.SysUser">
        SELECT id, username, password, email, role, create_time as createTime, is_locked as isLocked
        FROM sys_user
        WHERE username = #{username}
    </select>

</mapper>